 .btm{
  width:100%;
  height:135rpx;
  position:fixed;
  left:0;
  bottom:0;
  background-color: #fff;
}
.code{
  width:100%;
  height:478rpx;
}
.btm .btn{
  width:480rpx;
  margin-left:30rpx;
  line-height:88rpx;
  text-align: center;
  background-color:#006BD6;
  color:#fff;
  font-size:32rpx;
  border-radius: 6px;
  border: 1px solid #979797;
}
.btm .abs-code{
  width:200rpx;
  height:200rpx;
  position: absolute;
  right:20rpx;
  bottom:40rpx;
}

.tip{
  text-align: center;
  font-size: 28rpx;
  color: rgb(255,0,0);
  margin-top: 30rpx;
}
.tip text{
  font-size:36rpx;
}