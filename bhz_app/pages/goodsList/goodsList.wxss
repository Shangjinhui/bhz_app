/* pages/goodsList.wxss */
.wrap{
  width:706rpx;
  height:750rpx;
  margin:22rpx auto;
  position: relative;
}
.swiper{
  width: 100%;
  height:100%;
}
.swiper .img{
  width:100%;
  height:706rpx;
  object-fit: cover;
}
.dots {
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  left: 0;
  bottom: 22rpx;
 }
 .dot {
  width: 8rpx;
  height:8rpx;
  border-radius: 50%;
  background-color: #D6D6D6;
  margin:0 5rpx;
 }
 /*选中以后的小圆点样式 */
 .active {
  width: 18rpx;
  height:8rpx;
  border-radius: 8rpx;
  background-color: #006BD6;
 }

 .con{
  padding: 33rpx 31rpx 270rpx;
  width: 100%;
  box-sizing: border-box;
}

